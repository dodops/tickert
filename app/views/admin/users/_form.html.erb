<%= form_for [:admin, @user] do |f| %>
  <% if @user.errors.any? %>
    <div id="error">
      <h4><%= pluralize(@user.errors.count, "error") %>
        prohibited this project from being saved:</h4>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  	<%= f.label :email %><br />
  	<%= f.email_field :email %>
  </p>


  <p>
  	<%= f.label :password %><br />
  	<%= f.password_field :password %>
  </p>
  <p>
    <%= f.check_box :admin %>
    <%= f.label :admin, "Is an admin?" %>
  </p>
  <%= f.submit %>
<% end %>

