
<%= form_for [@project, @ticket] do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error">
      <h4><%= pluralize(@ticket.errors.count, "error") %>
        prohibited this project from being saved:</h4>
      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  	<%= f.label :title %><br />
  	<%= f.text_field :title %>
  </p>


  <p>
  	<%= f.label :description %><br />
  	<%= f.text_area :description %>
  </p>
  <%= f.submit %>

<% end -%>
