<h2>New Project</h2>

<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <div id="error">
      <h4><%= pluralize(@project.errors.count, "error") %>
        prohibited this project from being saved:</h4>
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  	<%= f.label :name %><br />
  	<%= f.text_field :name %>
  </p>


  <p>
  	<%= f.label :description %><br />
  	<%= f.text_field :description %>
  </p>
  <%= f.submit %>

<% end -%>
